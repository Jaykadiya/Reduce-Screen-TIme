<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/permission_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:paddingLeft="15dp"
            android:text="This permission is used to show particular app usage. So, please click on below Button!!!"
            android:textSize="25dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/enable_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/permission_description_tv"
            android:layout_marginTop="15dp"
            android:background="#155CDD"
            android:gravity="center"
            android:text="Enable Usage Stats Permission"
            android:textColor="#fff"
            android:visibility="gone"
            />
    <TextView
        android:id="@+id/detail_of_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:paddingLeft="15dp"
        android:text="Please click on below button to see last 24 hrs App Usage!!! "
        android:textSize="25dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/show_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_of_btn"
        android:layout_marginTop="25dp"
        android:background="#155CDD"
        android:gravity="center"
        android:text="CLICK HERE TO SEE APP USAGE"
        android:textColor="#fff"
        android:visibility="gone" />


    <ListView
        android:visibility="gone"
        android:id="@+id/apps_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>